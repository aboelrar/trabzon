<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/gray"
    tools:context=".View.Activity.userProfile">

  <include layout="@layout/userprofilebar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight=".07"/>
    <LinearLayout
        android:layout_weight=".16"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="right"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="0dp">
     
        <LinearLayout
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_height="match_parent">
            <TextView
            android:layout_weight=".45"
            android:layout_width="match_parent"
                android:textSize="@dimen/_15ssp"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:textStyle="bold"
                android:text="احمد جابر"
            android:layout_height="0dp" />
            <TextView
                android:layout_weight=".4"
                android:layout_width="match_parent"
                android:text="عارض ازياء"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12sdp"
                android:layout_height="0dp" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_60sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight=".15"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".1"
            android:weightSum="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_height="0dp"></LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".3"
        android:weightSum="1"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <TextView
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:gravity="right"
            android:paddingRight="@dimen/_10sdp"
            android:text="+0201141012485"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight=".1"
            android:layout_width="0dp"
            app:srcCompat="@drawable/ic_phone_android_black_24dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight=".03"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".1"
            android:weightSum="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_height="0dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".3"
            android:weightSum="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:layout_weight=".8"
                android:layout_width="0dp"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text="abogaberelrayee@gmail.com"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_weight=".1"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_email_black_24dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_weight=".03"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:src="@android:color/white"/>
    <LinearLayout
        android:layout_weight=".52"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="0dp">
        <ImageView
            android:layout_weight=".05"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight=".13"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right"
            android:layout_height="0dp">


            <TextView
                android:layout_weight=".87"
                android:layout_width="0dp"
                android:text="@string/served"
                android:textSize="@dimen/_12ssp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/appoienments"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"/>
            <ImageView
                android:layout_weight=".03"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight=".13"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right"
            android:layout_height="0dp">

            <TextView
                android:layout_weight=".78"
                android:layout_width="0dp"
                android:text="@string/language"
                android:textSize="@dimen/_12ssp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/language"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"/>
            <ImageView
                android:layout_weight=".03"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight=".125"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@android:color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:weightSum="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight=".82"
                android:layout_width="0dp"
                android:text="@string/logout"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_13ssp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="@dimen/_25sdp" />
            <ImageView
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/logout"
                android:layout_height="@dimen/_25sdp" />
            <ImageView
                android:layout_weight=".03"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>